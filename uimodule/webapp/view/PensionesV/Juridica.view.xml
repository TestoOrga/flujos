<mvc:View controllerName="bafar.flujos.flujos.controller.PensionesC.JuridicaDeudas"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<!-- <Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content> -->

	<Panel expandable="true" headerText="{i18n>Pensiones.Juridico.panel}" width="auto" class="sapUiResponsiveMargin" expanded="true">
		<content>
			<f:SimpleForm id="SimpleForm1" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false">
				<f:content>					
					<Label text="Número de órden" required="true"/>
					<Input id="numeroOrdenInput" value=""></Input>
					<DatePicker xmlns="sap.m" id="numeroOrdenDate" editable="false"/>
					<Label text="Receptor" required="true"/>
					<Input id="receptor" value=""/>
					<Label text="Cve. Banco" required="true"/>
					<Select id="cveBancoSelect" maxWidth="100%" width ="auto" items="{ path: '/claveBanco', sorter: { path: 'C2', descending: false }}" change="onSelectClaveBanco" forceSelection="false">
						<core:Item key="{C2}" text="{C1} {C2}"/>
					</Select>
					<Input id="_claveBancoInput" fieldWidth="100%" editable="false" maxLength="18"/>
					<Label required="true" text="Cuenta Bancaria"/>
					<Input value="" id="cuentaBancariaInput" maxLength="18"/>
					<Label required="true" text="Via Pago"/>
					<Select id="_viaPagoSelect" maxWidth="100%" width ="auto" items="{/viaPago}" change="onSelectViaPago" forceSelection="false">
						<core:Item key="{C2}" text="{C1}"/>
					</Select>
					<Input required="true" id="_viaPagoInput" fieldWidth="100%" editable="false"/>				
				</f:content>
			</f:SimpleForm>
			
		</content>
	</Panel>
</mvc:View>
