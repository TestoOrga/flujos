<mvc:View xmlns:footerbar="sap.ushell.ui.footerbar"
    xmlns:uxap="sap.uxap"
    xmlns:semantic="sap.m.semantic" controllerName="bafar.flujos.flujos.controller.Aprobacion.AprobacionFlow"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core" displayBlock="true" height="100%" busyIndicatorDelay="0">
    <semantic:SemanticPage floatingFooter="true" showSubHeader="false" showNavButton="false" title="testo">
        <semantic:customHeaderContent>
            <Button text="edit"></Button>
        </semantic:customHeaderContent>
        <semantic:content>
            <ObjectHeader title="{viewModel>/Name}" icon="{viewModel>/icon}" imageShape="Square"  responsive="true" intro="subtitolo">
                <statuses>
                <ObjectStatus text="Por Aprobar" state="Warning"></ObjectStatus>
                </statuses>
                <attributes>                
                    <ObjectAttribute title="titulo" text="testo"></ObjectAttribute>
                    <ObjectAttribute title="titula" text="testa"></ObjectAttribute>
                </attributes>
            </ObjectHeader>
            <Panel id="panelId"></Panel>
        </semantic:content>
        <semantic:customFooterContent>
            <OverflowToolbar id="footer" design="Solid" style="Clear">
                <content>
                    <ToolbarSpacer id="spacer"/>
                    <Button id="footerFlujosButAprobar" type="Accept" text="{i18n>AprobacionFlowView.Aprobar}" press="onAprobar"/>
                    <Button id="footerFlujosButCancelar" type="Reject" text="{i18n>HeaderFlujosFooterButCancelar}" press="onCancelar"/>
                </content>
            </OverflowToolbar>
        </semantic:customFooterContent>
    </semantic:SemanticPage>
</mvc:View>