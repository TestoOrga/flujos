<mvc:View controllerName="bafar.flujos.flujos.controller.Indemnizaciones.Indemnizaciones"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:unified="sap.ui.unified" displayBlock="true" height="100%" busyIndicatorDelay="0">
    <Panel accessibleRole="Form" backgroundDesign="Translucent" expandAnimation="true" expandable="true" expanded="false" headerText="Indemnizaciones" height="auto" width="auto" class="sapUiResponsiveMargin">
        <content>
        <form:SimpleForm class="sapUiSmallNegativeMarginBeginEnd" editable="false" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                <form:content>
                    <Label required="true" text="{i18n>Indemnizaciones.Sociedad}"/>
                    <Select maxWidth="100%" width ="auto" items="{sociedad>/}" change="onSelect($event, 'sociedad')" forceSelection="false">
                        <c:Item key="{sociedad>C1}" text="{sociedad>C1} {sociedad>C2}"/>
                    </Select>
                    <Label required="true" text="{i18n>Indemnizaciones.DivisionPersonal}" />
                    <Select id="titleSelDivision" enabled="false" maxWidth="100%" width ="auto" items="{division>/}" change="onSelect($event, 'division')" forceSelection="false">
                        <c:Item key="{division>C1}" text="{division>C1} {division>C2}"/>
                    </Select>
                    <Label required="true" text="{i18n>Indemnizaciones.AreaNomina}"/>
                    <Select maxWidth="100%" width ="auto" items="{areaNomina>/}" change="onSelect($event, 'areaNomina')" selectedKey="" forceSelection="false">
                        <c:Item key="{AreaNomina>C1}" text="{areaNomina>C1} {areaNomina>C2}"/>
                    </Select>
                </form:content>
            </form:SimpleForm>
        </content>
    </Panel>
</mvc:View>
     <Table id="mainTable" width="auto" items="{path:'tablaFlujo>/', templateShareable:true}" noDataText="{i18n>flujoTablaView.itemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" mode="MultiSelect" selectionChange="mainTabSelect" fixedLayout="false" updateFinished="onTableUpdateFinished">
                    <columns>
                        <Column>
                            <Text text="{i18n>Indemnizaciones.Item}" width="100px"/>
                        </Column>
                        <Column hAlign="End">
                            <Text text="No. {i18n>Indemnizaciones.NoPersonal}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.Nombre}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Fecha {i18n>Indemnizaciones.FechaBaja}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.Gpo}." width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.SD}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.SPA}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.ANT}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.Tipo}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.MontoDias}" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="{i18n>Indemnizaciones.Motivo}" width="100px"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem class="lineItemSucc" highlight="Success" type="Navigation" press="onItemPress">
                            <cells>
                                <Text text="{tablaFlujo>vis1}" id="item"/>
                                <Input value="{tablaFlujo>in1}" change="onInputChange($event, 'in1')" class="valInput" liveChange="onInputLive" id="noPersonal"/>
                                <Text text="{tablaFlujo>vis2}" id="nombre"/>
                                <Text text="{path: 'tablaFlujo>vis3',formatter: '.formatter.fooErdat1'}"/>
                                <Text text="{tablaFlujo>vis4}" id="gpo"/>
                                <Text text="{tablaFlujo>vis5}" id="SD"/>
                                <Input value="{tablaFlujo>in2}" change="onInputChange($event, 'in3')" class="valInput" liveChange="onInputLive" id="SPA"/>
                                <Text text="{tablaFlujo>vis6}" id="ant"/>
                                <Select id="in3" items="{path: 'tablaFlujo>din3/', templateShareable: false}" selectedKey="{tablaFlujo>in4}" change="onSelect($event, 'in4')" forceSelection="false" class="valInput resSelect">
                                    <c:Item key="{tablaFlujo>C1}" text="{tablaFlujo>C1}"/>
                                </Select>
                                <Input value="{tablaFlujo>in4}" change="onInputChange($event, 'in4')" class="valInput" liveChange="onInputLive" id="montoDias"/>
                                <Input value="{tablaFlujo>in5}" change="onInputChange($event, 'in5')" class="valInput" liveChange="onInputLive"  id="motivo"/>
                            </cells>
                            <dependents>
                                <ResponsivePopover id="popover" placement="PreferredTopOrFlip" resizable="true">
                                    <layout:VerticalLayout class="sapUiContentPadding" width="100%">
                                        <layout:content>
                                            <Text ></Text>
                                        </layout:content>
                                    </layout:VerticalLayout>
                                </ResponsivePopover>
                            </dependents>
                        </ColumnListItem>
                    </items>
                </Table>