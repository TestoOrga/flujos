<mvc:View controllerName="bafar.flujos.flujos.controller.CambioSueldo.CambioSueldo"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified" displayBlock="true" height="100%" busyIndicatorDelay="0">
    <Panel accessibleRole="Form" backgroundDesign="Translucent" expandAnimation="true" expandable="true" expanded="false" headerText="Cambios de Sueldo" height="auto" width="auto" class="sapUiResponsiveMargin">
        <content>
        <form:SimpleForm class="sapUiSmallNegativeMarginBeginEnd" editable="false" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                <form:content>
                    <Label required="true" text="Sociedad"/>
                    <Select maxWidth="100%" width ="auto" items="{sociedad>/}" change="onSelect($event, 'sociedad')" forceSelection="false">
                        <c:Item key="{sociedad>C1}" text="{sociedad>C1} {sociedad>C2}"/>
                    </Select>
                    <Label required="true" text="Division" />
                    <Select id="titleSelDivision" enabled="false" maxWidth="100%" width ="auto" items="{division>/}" change="onSelect($event, 'division')" forceSelection="false">
                        <c:Item key="{division>C1}" text="{division>C1} {division>C2}"/>
                    </Select>
                    <Label required="true" text="Area Nomina"/>
                    <Select maxWidth="100%" width ="auto" items="{areaNomina>/}" change="onSelect($event, 'areaNomina')" selectedKey="" forceSelection="false">
                        <c:Item key="{areaNomina>C1}" text="{areaNomina>C1} {areaNomina>C2}"/>
                    </Select>
                </form:content>
            </form:SimpleForm>
            <Toolbar height="4rem" enabled="{viewGeneral>/release}">
                <content>
                    <!--texto-->
                    <Title id="listTitle" class="sapUiSmallMarginBegin" titleStyle="H4"/>
                    <ToolbarSpacer id="space1"/>
                    <layout:HorizontalLayout allowWrapping="false">
                        <layout:content>
                            <Label id="cargaXLSX" text="{i18n>cargandoXLSX}" class="blink" visible="false"/>
                            <Button icon="sap-icon://add" class="sapUiTinyMarginEnd" type="Transparent" press="onAddLine"></Button>
                            <Button id="toolbarDel" icon="sap-icon://delete" class="sapUiTinyMarginEnd" type="Transparent" press="onRemoveLines" enabled="false"></Button>
                            <unified:FileUploader id="tempUpload" buttonText="{= ${device>/system/phone}?'':${i18n>XLSXload}}" iconOnly="true" buttonOnly="true" icon="sap-icon://upload" uploadComplete="handleTempUploadCompleted" uploadOnChange="true" uploadStart="onHandleTempUploadStart" change="onHandleTempUploadStart" class="sapUiTinyMarginEnd" busy="{tablaFlujo>atta}" sameFilenameAllowed="true" enabled="{viewGeneral>/release}" fileType="xlsx"/>
                            <Button id="toolbarDown" text="{= ${device>/system/phone}?'':${i18n>XLSXdown}}" icon="sap-icon://download" tooltip="{i18n>XLSXdown}" press="onDownTemplate" type="Transparent"/>
                        </layout:content>
                    </layout:HorizontalLayout>
                </content>
            </Toolbar>
            <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
                 <Table id="mainTable" width="auto" items="{path:'tablaFlujo>/', templateShareable:false}" noDataText="{flujoTablaView.itemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" mode="MultiSelect" selectionChange="mainTabSelect" fixedLayout="false" updateFinished="onTableUpdateFinished" blocked="{= !${viewGeneral>/release}}">
                    <columns>
                        <Column>
                            <Text text="Item" width="100px"/>
                        </Column>
                        <Column hAlign="End">
                            <Text text="No. Personal" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Nombre" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Sueldo" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Fecha" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Motivo" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Justificacion" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Sueldo Actual" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Minimo" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Maximo" width="100px"/>
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                            <Text text="Documentacion" width="100px"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem class="lineItemSucc" highlight="Success">
                            <cells>
                                <Text id="attachPopover" text="{tablaFlujo>vis1}"/>
                                <Input value="{tablaFlujo>in1}" change="onInputChange($event, 'in1')" class="valInput" liveChange="onInputLive"/>
                                <Text text="{tablaFlujo>vis2}"/>
                                <Input value="{tablaFlujo>in2}" change="formatCurrency" class="valInput"/>
                                <DatePicker id="in3" displayFormat="short" />
                                <Select id="in4" items="{path: 'in4>/', templateShareable: false}" selectedKey="{tablaFlujo>in4}" change="onSelect($event, 'in4')" forceSelection="false" class="valInput resSelect">
                                    <c:Item key="{in4>C1}" text="{in4>C1} {in4>C2}"/>
                                </Select>
                                <Input value="{tablaFlujo>in5}" change="formatCurrency" class="valInput"/>
                                <Text text="{path: 'tablaFlujo>vis3'}"/>
                                <Text text="{path: 'tablaFlujo>vis4'}"/>
                                <Text text="{path: 'tablaFlujo>vis5'}"/>
                                <unified:FileUploader iconOnly="true" buttonOnly="true" icon="sap-icon://attachment" uploadComplete="onHandleUploadComplete" uploadOnChange="true" uploadStart="onHandleUploadStart" change="onHandleUploadStart" class="sapUiTinyMarginEnd" iconHovered="sap-icon://accelerated" busy="{tablaFlujo>atta}" enabled="{= ${tablaFlujo>vis2} ? true : false}"/>
                            </cells>
                            <dependents>
                                <ResponsivePopover id="popover" placement="PreferredTopOrFlip" resizable="true">
                                    <layout:VerticalLayout class="sapUiContentPadding" width="100%">
                                        <layout:content>
                                            <form:SimpleForm class="sapUiSmallNegativeMarginBeginEnd" editable="false" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="2">
                                                <form:content>
                                                    <Label required="true" text="Departamento"/>
                                                    <Text text="{popLine>/visP1}"/>
                                                    <Label required="true" text="Funcion"/>
                                                    <Text text="{popLine>/visP2}"/>
                                                    <Label required="true" text="Fecha Ingreso"/>
                                                    <Text text="{path: 'popLine>/visP3',formatter: '.formatter.fooErdat1'}"/>
                                                    <Label required="true" text="Tabulador"/>
                                                    <Text text="{popLine>/visP4}"/>
                                                    <Label required="true" text="Fecha ultimo aumento"/>
                                                    <Text text="{path: 'popLine>/visP5',formatter: '.formatter.fooErdat1'}"/>
                                                    <Label required="true" text="Funcion"/>
                                                    <Text text="{popLine>/visP6}"/>
                                                </form:content>
                                            </form:SimpleForm>
                                        </layout:content>
                                    </layout:VerticalLayout>
                                </ResponsivePopover>
                            </dependents>
                        </ColumnListItem>
                    </items>
                </Table> 
            </ScrollContainer>
                </content>
    </Panel>
</mvc:View>